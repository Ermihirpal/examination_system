<h1 >Login Page</h1>

<% if flash[:notice] %>
  <%= content_tag :h1, flash[:notice] %>
<% else %>
  <%= content_tag :h1, "Please Log in" %>
<% end %>

<%= form_tag logedin_path do %>
<%= label_tag :email%><br>
<%= text_field_tag :email%><br><br>
<%= label_tag :password%> <br>
  <%= password_field_tag :password %><br><br>
  <%= link_to "Sign Up", new_student_path %><br>
  <%= submit_tag "SignIn" %><br>
<% end %>

<%= link_to 'Back', root_path %>
