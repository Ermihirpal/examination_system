<%= form_with model: @student, local: true do |form| %>
 
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
   
    <% if @student.errors.any?  %>
      <% @student.errors.full_messages_for(:name).each do |msg| %>
        <%=msg%>
      <% end %>
    <% end %> 
  </p>
 
  <p>
    <%= form.label :email%><br>
    <%= form.text_field :email%><br>
    
    <% if @student.errors.any?  %>
      <% @student.errors.full_messages_for(:email).each do |msg| %>
        <%=msg%>
      <% end %>
    <% end %>
  </p>
 
  <p>
    <%= form.label :address %><br>
    <%= form.text_field :address %>
  
    <% if @student.errors.any?  %>
        <% @student.errors.full_messages_for(:mobile).each do |msg| %>
          <%=msg%>
        <% end %>
    <% end %>
  </p>

  <p>
    <%= form.label :phone_number %><br>
    <%= form.text_field :phone_number%>
  
    <% if @student.errors.any?  %>
      <% @student.errors.full_messages_for(:dob).each do |msg| %>
        <%=msg%>
      <% end %>
    <% end %>
  </p>
  
  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password%><br>
  
    <% if @student.errors.any?  %>
      <% @student.errors.full_messages_for(:password).each do |msg| %>
        <%=msg%><br>
       <% end %>
    <% end %>

    <%= form.label :password_confirmation  %><br>
    <%= form.password_field :password_confirmation %><br>
  
    <% if @student.errors.any?  %>
      <% @student.errors.full_messages_for(:password_confirmation).each do |msg| %>
        <%=msg%>
      <% end %>
    <% end %>

  </p>
  <br>

  <p>
    <%= form.submit %>
  </p>
  <br>

<% end %>