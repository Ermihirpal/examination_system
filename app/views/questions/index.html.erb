<h1>Questions List</h1>

<table>
  <thead>
   <tr>
    <th>ID</th>
    <th>Question</th>
    <th>Optons</th>
  
    <th>Show</th>
    <th>Edit</th>
    <th>Destroy</th>
   </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
       <td><%=question.id %></td>
       <td><%= question.que %></td>
        <td><%=question.options %></td>

        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to "Destroy", question_path(question), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
     </tr>
    <% end %>
  </tbody>
</table>

