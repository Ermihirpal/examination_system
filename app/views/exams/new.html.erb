<h1>Create Exam</h1>
<%= form_with model: @exam, local: true do |f| %>

<div class="card">
  <div class="card-body">

    <div class="mb-3">
      <%= f.label :subject, { class: "form-label"} %>
      <%= f.text_field :subject, { class: "form-control", placeholder: "Enter Subject" } %>
    </div>

    <div class="mb-3">
      <%= f.label :total_marks, { class: "form-label"} %>
      <%= f.text_field :total_marks, { class: "form-control", placeholder: "Site Code" } %>
    </div>

    <div class="mb-3">
      <%= f.label :per_que_mark, { class: "form-label"} %>
      <%= f.text_field :per_que_mark, { class: "form-control", placeholder: "per_que_mark" } %>
    </div>

     <div class="mb-3">
      <%= f.label :time_duration, { class: "form-label"} %>
      <%= f.text_field :time_duration, { class: "form-control", placeholder: "time_duration" } %>
    </div>
    <%= f.submit "Submit", class: "btn btn-primary" %>

  </div>
</div>
<% end %>

<%= link_to 'Back', root_path %>